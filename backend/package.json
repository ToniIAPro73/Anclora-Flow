{
  "name": "anclora-flow-backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build && node dist/server.js",
    "start": "node dist/server.js",
    "build": "tsc && mkdir -p dist/database && cp src/database/*.sql dist/database/ 2>/dev/null || true",
    "start:win": "powershell -ExecutionPolicy Bypass -File ./start.ps1",
