# ============================================
# PLANTILLA DE CONFIGURACIÓN ANCLORA FLOW
# Copia este archivo como .env y completa los valores
# ============================================

# Base de datos PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=anclora_flow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Backend
BACKEND_PORT=8020
FRONTEND_URL=http://localhost:3020
BACKEND_URL=http://localhost:8020

# JWT Secret
# Genera uno con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=genera_tu_clave_secreta_aqui
# JWT_EXPIRES_IN=7d

# Email
# MAIL_TRANSPORT puede ser console, smtp o test (Ethereal)
MAIL_TRANSPORT=console
MAIL_FROM="Anclora Flow <no-reply@anclora.test>"
# MAIL_HOST=smtp.tu-proveedor.com
# MAIL_PORT=587
# MAIL_USERNAME=usuario_smtp
# MAIL_PASSWORD=contraseña_smtp

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Application
NODE_ENV=development
FRONTEND_URL=http://localhost:3020
# Nota: El backend permite CORS desde múltiples orígenes:
# - http://localhost:3020 (frontend build)
# - http://localhost:5173 (Vite dev server)

# Usuario de prueba (solo desarrollo)
DEMO_USER_EMAIL=demo@anclora.test
DEMO_USER_PASSWORD=Anclora123!
DEMO_USER_FIRST_NAME=Demo
DEMO_USER_LAST_NAME=Anclora
DEMO_USER_COMPANY=Anclora Labs
DEMO_USER_PHONE=+34 600 000 000